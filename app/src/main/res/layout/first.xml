<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.ragnar.walli.Front"
    android:id="@+id/drawer"

   >

<LinearLayout
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:background="#FF216D8F"
        android:drawableLeft="@drawable/clip"
        android:drawableTintMode="screen"
        android:onClick="check"
        android:text="Check
          Attendance"
        android:textColor="#ffffff"
        android:layout_marginRight="5dp"
        android:textSize="12sp"
        android:inputType="textMultiLine"
       />

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_weight="1"

        android:layout_height="100dp"
        android:background="#FF216D8F"
        android:drawableLeft="@drawable/mark"
        android:drawableTintMode="screen"
        android:onClick="mark"
        android:text="Mark
        Attendance"
        android:textColor="#ffffff"
        android:inputType="textMultiLine"
        android:textSize="12sp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"

            android:background="#FF216D8F"
            android:drawableLeft="@drawable/check"
            android:drawableTintMode="screen"
            android:text="write
          Announcement"
            android:textColor="#ffffff"
            android:textSize="12sp" />


        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:background="#FF216D8F"
            android:drawableLeft="@drawable/read"
            android:drawableTintMode="screen"
            android:text="Read
          Announcement"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"
        android:background="#FF216D8F"
        android:drawableLeft="@drawable/buj"
        android:drawableTintMode="screen"
        android:text="Delete
         Announcement"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="100dp"
        android:text="Reg no and
        House"
        android:textColor="#ffffff"
        android:background="#FF216D8F"
        android:drawableTintMode="screen"
        android:drawableLeft="@drawable/blog"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:layout_marginTop="8dp"

         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
         android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:id="@+id/img"
            android:layout_marginBottom="5dp"
        />
    </LinearLayout>
</LinearLayout>
    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/navigationwallpaper"
        android:id="@+id/navig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawermenu"
        app:itemTextColor="#FF080808"

        ></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>